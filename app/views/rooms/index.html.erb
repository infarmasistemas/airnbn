<h1><%= t'rooms.title' %></h1>
</br>
<table class="table table-sm table-bordered">
  <thead>
    <tr>
      <th><%= t'rooms.title' %></th>
      <th><%= t'rooms.location' %></th>
      <th><%= t'rooms.description' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.title %></td>
        <td><%= room.location %></td>
        <td><%= room.description %></td>
        <td><%= link_to t('rooms.links.show'), room %></td>
        <td><%= link_to t('rooms.links.edit'), edit_room_path(room) %></td>
        <td><%= link_to t('rooms.links.destroy'), room, method: :delete, data: { confirm: 'Deseja remover?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('rooms.new.title'), new_room_path %>
